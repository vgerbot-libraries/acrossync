{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["esnext", "dom"],
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "importHelpers": true,
        "declaration": true,
        "listFiles": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]
    },
    "include": ["src"]
}
